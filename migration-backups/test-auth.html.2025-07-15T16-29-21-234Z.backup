<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Authentication Test - Bricks Attendance System</title>
    <link rel="stylesheet" href="css/styles.css">
    <style>
        body {
            font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
            margin: 20px;
            background: var(--bg-primary);
            color: var(--text-primary);
        }
        .test-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background: var(--bg-secondary);
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
        .test-header {
            text-align: center;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 2px solid var(--accent-primary);
        }
        .test-results {
            background: #1a1a1a;
            color: #00ff00;
            padding: 20px;
            border-radius: 5px;
            font-family: 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, 'Courier New', monospace;
            font-size: 14px;
            line-height: 1.5;
            white-space: pre-wrap;
            max-height: 600px;
            overflow-y: auto;
        }
        .navigation {
            margin-top: 20px;
            text-align: center;
        }
        .btn {
            display: inline-block;
            padding: 10px 20px;
            margin: 0 10px;
            background: var(--accent-primary);
            color: white;
            text-decoration: none;
            border-radius: 5px;
            border: none;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        .btn:hover {
            background: var(--accent-hover);
            transform: translateY(-1px);
        }
        .btn-secondary {
            background: #6c757d;
        }
    </style>
</head>
<body>
    <div class="test-container">
        <div class="test-header">
            <h1>üîê Authentication Required System Test</h1>
            <p>Testing that the system properly requires authentication with no fallbacks</p>
        </div>
        
        <div class="test-results" id="testResults">
            Loading authentication tests...
        </div>
        
        <div class="navigation">
            <a href="/login.html" class="btn">Go to Login</a>
            <a href="/settings.html" class="btn btn-secondary">Test Settings Page</a>
            <button onclick="location.reload()" class="btn btn-secondary">Run Tests Again</button>
        </div>
    </div>

    <!-- Scripts -->
    <script src="js/backend-api-service.js"></script>
    <script src="js/unified-employee-manager.js"></script>
    <script>
        // Capture console output
        const originalLog = console.log;
        const originalError = console.error;
        const testResults = document.getElementById('testResults');
        let logOutput = '';

        function addToLog(message, type = 'log') {
            const timestamp = new Date().toLocaleTimeString();
            const prefix = type === 'error' ? '‚ùå' : type === 'warn' ? '‚ö†Ô∏è' : '‚ÑπÔ∏è';
            logOutput += `[${timestamp}] ${prefix} ${message}\n`;
            testResults.textContent = logOutput;
            testResults.scrollTop = testResults.scrollHeight;
        }

        console.log = function(...args) {
            originalLog.apply(console, args);
            addToLog(args.join(' '), 'log');
        };

        console.error = function(...args) {
            originalError.apply(console, args);
            addToLog(args.join(' '), 'error');
        };

        console.warn = function(...args) {
            originalError.apply(console, args);
            addToLog(args.join(' '), 'warn');
        };
    </script>
    <script src="js/test-auth-required.js"></script>
</body>
</html>
